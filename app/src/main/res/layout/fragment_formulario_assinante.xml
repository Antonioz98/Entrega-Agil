<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_nome_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            app:errorEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:hint="@string/nome"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_endereco_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:errorEnabled="true"
            app:layout_constraintEnd_toStartOf="@id/fragment_formulario_assinante_numero_layout"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="@id/fragment_formulario_assinante_nome_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_formulario_assinante_nome_layout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:hint="@string/endereco"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_numero_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/fragment_formulario_assinante_nome_layout"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/fragment_formulario_assinante_endereco_layout"
            app:layout_constraintTop_toTopOf="@id/fragment_formulario_assinante_endereco_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:hint="@string/numero"
                android:inputType="number"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_bairro_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/fragment_formulario_assinante_numero_layout"
            app:layout_constraintStart_toStartOf="@id/fragment_formulario_assinante_nome_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_formulario_assinante_endereco_layout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:hint="@string/bairro"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_complemento_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/fragment_formulario_assinante_numero_layout"
            app:layout_constraintStart_toStartOf="@id/fragment_formulario_assinante_nome_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_formulario_assinante_bairro_layout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_complemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:hint="@string/complemento"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_inicio_assinatura_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@id/fragment_formulario_assinante_nome_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_formulario_assinante_complemento_layout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_inicio_assinatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_calendario"
                android:drawablePadding="3dp"
                android:focusable="false"
                android:hint="@string/inicio_assinatura"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_formulario_assinante_termino_assinatura_layout"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@id/fragment_formulario_assinante_inicio_assinatura_layout"
            app:layout_constraintTop_toTopOf="@+id/fragment_formulario_assinante_inicio_assinatura_layout" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_formulario_assinante_termino_assinatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryText"
                android:drawablePadding="3dp"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_calendario"
                android:focusable="false"
                android:hint="@string/termino_assinatura"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorPrimaryText"
                android:textSize="@dimen/text_body_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/fragment_formulario_assinante_salvar"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:text="@string/salvar"
            android:textColor="@color/branco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_formulario_assinante_termino_assinatura_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
